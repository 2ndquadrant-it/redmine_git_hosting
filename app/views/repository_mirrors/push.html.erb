<% if !@is_xhr %>
  <h2><%=l(:label_mirror_push_title)%></h2>
<%- end %>

<p style="white-space:nowrap;">
  <%
    if @push_failed == true
      status = l(:label_mirror_push_fail)
      status_css = 'important'
    else
      status = l(:label_mirror_push_sucess)
      status_css = 'success'
    end
  %>

  <%= l(:label_mirror_push_info_html, :mirror_url => @mirror.url, :status => status, :status_css => status_css).html_safe %>
</p>

<span><b><%= l(:label_mirror_push_output) %> :</b></span>

<pre class="mirror-push<%= @push_failed == true ? " error" : "" %>">
  <%= @shellout %>
</pre>
