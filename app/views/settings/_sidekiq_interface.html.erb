<%
  # Gitolite Sidekiq Config
  gitolite_use_sidekiq = (!Setting.plugin_redmine_git_hosting.nil? and !Setting.plugin_redmine_git_hosting[:gitolite_use_sidekiq].nil?) ? Setting.plugin_redmine_git_hosting[:gitolite_use_sidekiq] : false
%>

<p>
  <label><%= l(:label_gitolite_use_sidekiq) %></label>
  <%= select_tag("settings[gitolite_use_sidekiq]", options_for_select([[l(:label_true), 'true'], [l(:label_false), 'false']], gitolite_use_sidekiq)) %>
  <br />
</p>

<% if RedmineGitolite::Config.gitolite_use_sidekiq? %>
  <div>
    <p id="sidekiq_link_url"><%#= link_to 'Sidekiq Web Interface', sidekiq_url, :target => '_blank' %></p>

    <iframe id="sidekiq_iframe" src="<%#= sidekiq_url %>">
      <p>Your browser does not support iframes.</p>
    </iframe>
  </div>
<% end %>
